{
    "compilerOptions": {
        "declaration": true,
        "esModuleInterop": true,
        "lib": ["ES2022"],
        "module": "Node16",
        "moduleResolution": "node16",
        "outDir": "./dist",
        "skipLibCheck": true,
        "strict": true,
        "target": "ES2022",
        "verbatimModuleSyntax": true
    },
    "exclude": ["./dist"],
    "include": ["./src/**/*", "./bin/**/*"]
}
